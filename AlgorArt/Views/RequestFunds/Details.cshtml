@model AlgorArt.Models.ViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Details";
}

<div>
    <br />
    <h4>Campaign</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Campaign Owner
        </dt>
        <dd class="col-sm-10">
            @Model.RequestFunds.User.UserName, @Model.RequestFunds.User.AccountAddress
        </dd>
        <dt class="col-sm-2">
            Campaign Title
        </dt>
        <dd class="col-sm-10">
            @Model.RequestFunds.FundTitle
        </dd>
        <dt class="col-sm-2">
            Campaign Type
        </dt>
        <dd class="col-sm-10">
            @Model.RequestFunds.FundType
        </dd>
        <dt class="col-sm-2">
            Campaign Description
        </dt>
        <dd class="col-sm-10">
            @Model.RequestFunds.FundDescription
        </dd>
        <dt class="col-sm-2">
            Amount Needed
        </dt>
        <dd class="col-sm-10">
            @Model.RequestFunds.AmountNeeded
        </dd>
        @*<dt class="col-sm-2">
            Number of Backers
        </dt>
        <dd class="col-sm-10">
            @Model.RequestFunds.BackersCount
        </dd>*@
        <dt class="col-sm-2">
            Created
        </dt>
        <dd class="col-sm-10">
            @Model.RequestFunds.Created
        </dd>
    </dl>
</div>
<h4>Backers</h4>
@foreach (var a in Model.FundersList)
{
    <a >@a.User.UserName has funded @a.Amount algos to this campaign</a>
    <br />
}

