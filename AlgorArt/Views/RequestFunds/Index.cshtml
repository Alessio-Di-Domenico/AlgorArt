@model IEnumerable<AlgorArt.Models.RequestFunds>

@{
    ViewData["Title"] = "MyProjects";
}
<p> @ViewBag.Success </p>
@functions{
    public string imag(string type){
        if(type == "Book") return "img/libro.png";
        else if (type == "Music") return "img/music.png";
        else if (type == "Movie") return "img/movie.png";
        else return "img/default.jpg";
    }
}
<hr />
<p>Your Address: @ViewBag.UserAddr</p>
<br />
<br />
@*Your Key: @ViewBag.Key*@

<h1>My Projects</h1>
<br />

<p>
    <a class="btn btn-primary shadow" role="button" asp-action="Create">Create New</a>
</p>


@foreach (var row in Model.ToArray().Split(3))
{
    <div class="row row-cols-1 row-cols-md-3 mx-auto" style="max-width: 900px;padding-left: 0px;margin-left: 132px;margin-right: 79px;">
        @foreach (var item in row)
        {
            <div class="col mb-4">
                <div >
                    <img style="pointer-events: none;"  class="rounded img-fluid " src="@imag(item.FundType)" height="250" width="250" />
                    <div class="py-4">
                        <span class="badge bg-primary mb-2">@Html.DisplayFor(modelItem => item.FundType)</span>
                        <h4 class="fw-bold">@Html.DisplayFor(modelItem => item.FundTitle)</h4>
                        <p class="text-muted">@Html.DisplayFor(modelItem => item.FundDescription)</p>
                        <a class="btn btn-primary shadow" role="button" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-primary shadow" role="button" asp-action="Details" asp-route-id="@item.Id" asp-route-title="@item.FundTitle">Details</a>
                        <a class="btn btn-primary shadow" role="button"  asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

